<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/gray_smm"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="1px"
            android:background="@color/gray_s">

            <ImageButton
                android:id="@+id/btnClose"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_bg_selector"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_close"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/input_password"
                android:textColor="@color/shadow"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/gray_s">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_border_gray">

                <RelativeLayout
                    android:id="@+id/P1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/P2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/P3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/P4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/P5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/P6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_r_gray">

                    <View
                        android:id="@+id/VP6"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:visibility="gone"
                        android:layout_centerInParent="true"
                        android:background="@drawable/rounded_black"/>

                    <TextView
                        android:id="@+id/tvP6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/shadow"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="45dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:text="@string/forget_password"
                android:textColor="@color/txt_blue_selector"
                android:textSize="14sp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="1px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:background="@color/silver"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="1"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber2"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="2"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber3"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="3"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:background="@color/silver"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber4"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="4"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber5"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="5"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber6"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="6"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:background="@color/silver"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnNumber7"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="7"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber8"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="8"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber9"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="9"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="1px"
                android:layout_weight="1"
                android:background="#e3e5ec"
                android:orientation="horizontal">

                <Button
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <Button
                    android:id="@+id/btnNumber0"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1px"
                    android:layout_weight="1"
                    android:background="@drawable/btn_white_to_gary_selector"
                    android:text="0"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>

                <ImageButton
                    android:id="@+id/btnBackspace"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/btn_backspace_selector"
                    android:textColor="@color/shadow"
                    android:textSize="22sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</layout>